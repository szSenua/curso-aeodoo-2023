<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Action to print Helpdesk Ticket -->
    <record id="action_report_helpdesk_ticket" model="ir.actions.report">
        <field name="name">Helpdesk Ticket</field>
        <field name="model">helpdesk.ticket</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">helpdesk_senua.report_helpdesk_ticket</field>
        <field name="report_file">helpdesk_senua.report_helpdesk_ticket</field>
        <field name="print_report_name">'Helpdesk Ticket - %s' % (object.name)</field>
        <field name="binding_model_id" ref="helpdesk_senua.model_helpdesk_ticket" />
        <field name="paperformat_id" ref="base.paperformat_euro" />
        <field name="binding_type">report</field>
    </record>


    <!-- Action to print Helpdesk Ticket List -->
    <record id="action_report_helpdesk_ticket_list" model="ir.actions.report">
        <field name="name">Helpdesk Ticket List</field>
        <field name="model">helpdesk.ticket</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">helpdesk_senua.report_helpdesk_ticket_list</field>
        <field name="report_file">helpdesk_senua.report_helpdesk_ticket_list</field>
        <field name="print_report_name">'Helpdesk Ticket List'</field>
        <field name="binding_model_id" ref="helpdesk_senua.model_helpdesk_ticket" />
        <field name="paperformat_id" ref="base.paperformat_euro" />
        <field name="binding_type">report</field>
    </record>


    <!-- Paperformat for User Card -->
    <record id="paperformat_card_user" model="report.paperformat">
        <field name="name">Custom Paperformat for User Card report</field>
        <field name="default" eval="False" />
        <field name="disable_shrinking" eval="True" />
        <field name="format">custom</field>
        <field name="page_height">120</field>
        <field name="page_width">240</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">3</field>
        <field name="margin_bottom">3</field>
        <field name="margin_left">3</field>
        <field name="margin_right">3</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">3</field>
        <field name="dpi">80</field>
    </record>

    <!-- Action to print User Card -->
    <record id="action_report_paperformat_user_card" model="ir.actions.report">
        <field name="name">User Card</field>
        <field name="model">res.users</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">helpdesk_senua.report_user_card</field>
        <field name="report_file">helpdesk_senua.report_user_card</field>
        <field name="print_report_name">'User Card - %s' % (object.name)</field>
        <field name="binding_model_id" ref="base.model_res_users" />
        <field name="paperformat_id" ref="helpdesk_senua.paperformat_card_user" />
        <field name="binding_type">report</field>
    </record>
</odoo>
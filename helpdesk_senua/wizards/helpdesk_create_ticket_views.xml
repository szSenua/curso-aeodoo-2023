<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_helpdesk_create_ticket_form" model="ir.ui.view">
        <field name="name">helpdesk.create.ticket.form</field>
        <field name="model">helpdesk.create.ticket</field>
        <field name="arch" type="xml">
            <form string="Create Helpdesk Ticket">
                <field name="state" invisible="1" />
                <group name="step_1" invisible="state != 'step_1'"> <!-- state and attr are deprecated at odoo 18 version -->
                    <field name="tag_id" invisible="1" />
                    <field name="name" />
                    <field name="description" />
                    <button string="Create" type="object" name="create_ticket" class="btn-primary" />
                </group>
                <group name="step_2" invisible="state != 'step_2'" >
                    <button string="View" type="object" name="view_ticket" class="btn-primary" />
                </group>
                <footer>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <!-- now do the action -->

    <record id="helpdesk_create_ticket_action" model="ir.actions.act_window">
        <field name="name">Create Helpdesk Ticket</field>
        <field name="res_model">helpdesk.create.ticket</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
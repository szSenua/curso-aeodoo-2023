<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_helpdesk_ticket_action_form" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket_action.form</field>
        <field name="model">helpdesk.ticket.action</field>
        <field eval="10" name="priority" />
        <field name="arch" type="xml">
            <form string="Action">
                <sheet>
                    <group name="main">
                        <field name="name" />
                        <field name="state" />
                        <field name="ticket_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_helpdesk_ticket_action_form_simple" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket_action.form.simple</field>
        <field name="model">helpdesk.ticket.action</field>
        <field eval="100" name="priority" />
        <field name="arch" type="xml">
            <form string="Action">
                <group name="main">
                    <field name="name" />
                    <field name="state" />
                </group>
            </form>
        </field>
    </record>

    <record id="view_helpdesk_ticket_action_list" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket_action.list</field>
        <field name="model">helpdesk.ticket.action</field>
        <field eval="10" name="priority" />
        <field name="arch" type="xml">
            <list string="Action">
                <field name="name" />
                <field name="state" />
                <field name="ticket_id" />
            </list>
        </field>
    </record>

    <record id="view_helpdesk_ticket_action_list_simple" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket_action.list.simple</field>
        <field name="model">helpdesk.ticket.action</field>
        <field eval="100" name="priority" />
        <field name="arch" type="xml">
            <list string="Action">
                <field name="name" />
                <field name="state" />
            </list>
        </field>
    </record>

    <record id="helpdesk_ticket_action_search" model="ir.ui.view">
        <field name="name">helpdesk_ticket_action.search</field>
        <field name="model">helpdesk.ticket.action</field>
        <field name="arch" type="xml">
            <search string="Helpdesk Ticket Actions Search">
                <field name="name" />
                <field name="state" />
                <field name="ticket_id" />
                <group string="Group By" name="groupby">
                    <filter string="State" name="state_groupby" context="{'group_by':'state'}" />
                    <filter string="Ticket" name="ticket_groupby" context="{'group_by':'ticket_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="helpdesk_ticket_action_action" model="ir.actions.act_window">
        <field name="name">Action</field>
        <field name="res_model">helpdesk.ticket.action</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Action
            </p>
        </field>
    </record>

    <menuitem id="helpdesk_ticket_action_menu"
        parent="helpdesk_menu"
        action="helpdesk_ticket_action_action"
        sequence="20" />

</odoo>
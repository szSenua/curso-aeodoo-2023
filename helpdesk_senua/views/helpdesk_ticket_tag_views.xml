<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_helpdesk_ticket_tag_form" model="ir.ui.view">
        <field name="name">view_helpdesk_ticket_tag_form</field>
        <field name="model">helpdesk.ticket.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <button name="%(helpdesk_senua.helpdesk_create_ticket_action)d" string="Create Ticket" type="action" class="btn-primary"/>
                    <group>
                        <field name="name" />
                        <field name="ticket_ids" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_helpdesk_ticket_tag_list" model="ir.ui.view">
        <field name="name">view_helpdesk_ticket_tag_list</field>
        <field name="model">helpdesk.ticket.tag</field>
        <field name="arch" type="xml">
            <!-- Odoo 18: widget="handle" works only on editable lists with sequence field and write
            access -->
            <list string="Tickets Tags">
                <field name="name" />
            </list>
        </field>
    </record>

    <!-- Action: defines what happens when you click the menu -->
    <record id="helpdesk_ticket_tag_action" model="ir.actions.act_window">
        <!-- Title displayed at the top when opening this window -->
        <field name="name">Helpdesk Tickets Tags</field>

        <!-- Action type: opens a window with views -->
        <field name="type">ir.actions.act_window</field>

        <!-- Data model to be displayed -->
        <field name="res_model">helpdesk.ticket.tag</field>

        <!-- Available views: list first, then form -->
        <!-- Odoo 18 uses "list" instead of "tree" -->
        <field name="view_mode">list,form</field>

        <!-- Message displayed when there are no tickets created -->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new ticket tag
            </p>
        </field>
    </record>

    <!-- Main menu displayed in the top navigation bar -->
    <menuitem id="helpdesk_menu_config" name="Config" parent="helpdesk_menu" sequence="10" />

    <!-- Submenu inside Helpdesk that executes the action -->
    <menuitem id="helpdesk_ticket_tag_open"
        name="Tags"
        sequence="10"
        parent="helpdesk_menu_config"
        action="helpdesk_ticket_tag_action" />
</odoo>
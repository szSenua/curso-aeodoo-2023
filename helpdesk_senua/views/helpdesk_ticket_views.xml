<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="view_helpdesk_ticket_form" model="ir.ui.view">
        <field name="name">view_helpdesk_ticket_form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"
                        statusbar_visible="new,assigned,in_process,pending,resolved" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" optional="show" />
                            <field name="date_limit" optional="hide" />
                        </group>
                        <group>
                            <field name="user_id" />
                            <field name="tag_ids" widget="many2many_tags" />
                        </group>
                    </group>
                    <notebook>
                        <page name="description" string="Description">

                            <!-- <label for="description" string="Description" /> -->
                            <field name="description" />
                        </page>
                        <page name="to_do" string="To Do">
                            <!-- <label for="actions_todo" string="To Do" /> -->
                            <field name="actions_todo" />
                        </page>
                        <page name="actions" string="Actions">
                            <button
                                name="set_actions_as_done"
                                string="Set all as done"
                                type="object"
                                class="btn-primary" />
                            <!-- <label for="actions_todo" string="To Do" /> -->
                            <field name="action_ids">
                                <list string="Actions">
                                    <field name="name" />
                                    <field name="state" />
                                </list>
                                <form>
                                    <!-- Testing button to update the state -->
                                    <button name="set_done"
                                        type="object"
                                        string="Set done"
                                        class="btn-primary" />

                                    <button name="set_todo"
                                        type="object"
                                        string="Set todo"
                                        class="btn-primary" />
                                    <group>
                                        <field name="name" />
                                        <field name="state" readonly="1" />
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_helpdesk_ticket_list" model="ir.ui.view">
        <field name="name">view_helpdesk_ticket_list</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <!-- Odoo 18: widget="handle" works only on editable lists with sequence field and write
            access -->
            <list string="Tickets" editable="bottom" default_order="sequence">
                <!-- Añadir campo sequence y hacer el widget handle.-->
                <field name="sequence" widget="handle" />
                <!-- Mostrar campo nombre-->
                <field name="name" />
                <!-- Mostrar user asignado-->
                <field name="user_id" />
                <!-- El campo fecha que sea opcional y mostrarlo por defecto..-->
                <field name="date" optional="show" />
                <!-- El campo fecha limite que sea opcional mostrarlo y ocultarlo por defecto.-->
                <field name="date_limit" optional="hide" />
                <!-- Mostrar estado-->
                <field name="state" />
                <!-- Button used to open the form view since editable list rows cannot be clicked to
                open
                name: method to call on the model
                type: executes a server-side Python method
                icon: displays an external-link icon in the column
                class: makes the button behave like a link (avoids edit-in-row conflicts)
                string: label shown in the list view -->
                <button name="action_open_form"
                    type="object"
                    icon="fa-external-link"
                    class="oe_link"
                    string="Open" />

            </list>
        </field>
    </record>

    <!-- Search View -->
    <!-- Añadir vista search:
  - filtrar por nombre y por usuario asignado
  - filtrar tickets asignados
  - filtrar tickets sin date_due
  - agrupar por date_due
  - agrupar por usuario asignado -->
    <record id="view_helpdesk_ticket_search" model="ir.ui.view">
        <field name="name">view_helpdesk_ticket_search</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <search string="Tickets">
                <field name="name" />
                <field name="user_id" />
                <filter name="filter_to_assigned" string="Assigned"
                    domain="[('assigned', '=', 'True')]" />
                <filter name="filter_no_date" string="No date" domain="[('date', '=', False)]" />
                <filter name="date" string="Date" context="{'group_by': 'date'}" />
                <filter name="user" string="User" context="{'group_by': 'user_id'}" />
            </search>
        </field>
    </record>

    <!-- Vista kanban:
  - mostrar en tarjeta usuario y tiempo dedicado
  - agrupar por usuario
  - extra: añadir un field color, para cambiar el color de la tarjeta, ver como está hecho en
    crm.lead -->
    <record id="helpdesk_ticket_kanban" model="ir.ui.view">
        <field name="name">helpdesk_ticket.kanban</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <kanban default_group_by="user_id">
                <field name="name" />
                <field name="date" />
                <field name="color" />
                <field name="user_id" />
                <templates>
                    <t t-name="kanban-box">
                        <!-- Color selector for the card -->
                        <div
                            t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} #{lost_ribbon ? 'oe_kanban_card_ribbon' : ''} oe_kanban_global_click oe_kanban_card d-flex flex-column">
                            <div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle o-no-caret btn" role="button"
                                    data-bs-toggle="dropdown" data-bs-display="static" href="#"
                                    aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v" />
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <t t-if="widget.editable">
                                        <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                    </t>
                                    <t t-if="widget.deletable">
                                        <a role="menuitem" type="delete" class="dropdown-item">
                                            Delete</a>
                                    </t>
                                    <ul class="oe_kanban_colorpicker" data-field="color" />
                                </div>
                            </div>
                            <!-- Con la versión 18 no es necesario global click para poder clicar dentro
                            de la tarjeta -->
                            <div
                                class="oe_kanban_content flex-grow-1">
                                <strong class="o_kanban_record_title oe_partner_heading">
                                    <field name="name" />
                                </strong>
                                <ul>
                                    <li>
                                        <field name="date" />
                                    </li>
                                </ul>
                            </div>
                            <!-- footer with activities -->
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom">
                                    <!-- <div class="oe_kanban_bottom_left">
                                        <field name="priority" widget="priority" groups="base.group_user"/>
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div> -->

                                    <!-- Shows user avatar -->
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action: defines what happens when you click the menu -->
    <record id="helpdesk_ticket_action" model="ir.actions.act_window">
        <!-- Title displayed at the top when opening this window -->
        <field name="name">Helpdesk Tickets</field>

        <!-- Action type: opens a window with views -->
        <field name="type">ir.actions.act_window</field>

        <!-- Data model to be displayed -->
        <field name="res_model">helpdesk.ticket</field>

        <!-- Available views: list first, then form -->
        <!-- Odoo 18 uses "list" instead of "tree" -->
        <field name="view_mode">kanban,list,form</field>

        <!-- Message displayed when there are no tickets created -->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new ticket
            </p>
        </field>
    </record>

    <!-- Main menu displayed in the top navigation bar -->
    <menuitem id="helpdesk_menu" name="Helpdesk" sequence="10" />

    <!-- Submenu inside Helpdesk that executes the action -->
    <menuitem id="helpdesk_ticket_open"
        name="Tickets"
        sequence="10"
        parent="helpdesk_menu"
        action="helpdesk_ticket_action" />
</odoo>
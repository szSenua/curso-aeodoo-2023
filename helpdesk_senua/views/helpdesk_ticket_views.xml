<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_helpdesk_ticket_form" model="ir.ui.view">
        <field name="name">view_helpdesk_ticket_form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"
                        statusbar_visible="new,assigned,in_process,pending,resolved" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" optional="show" />
                            <field name="date_limit" optional="hide" />
                            <field name="amount_time" widget="float_time" />
                        </group>
                        <group>
                            <field name="assigned" />
                            <field name="user_id" />
                            <field name="tickets_count" />
                            <field name="person_id" options="{'no_create':'True', 'no_open':'True'}" />
                            <field name="tag_name" />
                            <button string="Crear"
                                type="object"
                                name="create_tag" />
                            <button string="Limpiar etiquetas"
                                type="object"
                                name="clear_tags" />
                            <field name="tag_ids" widget="many2many_tags" />
                        </group>
                    </group>
                    <notebook>
                        <page name="description" string="Description">

                            <!-- <label for="description" string="Description" /> -->
                            <field name="description" />
                        </page>
                        <page name="to_do" string="To Do">
                            <!-- <label for="actions_todo" string="To Do" /> -->
                            <field name="actions_todo" />
                        </page>
                        <page name="actions" string="Actions">
                            <button
                                name="set_actions_as_done"
                                string="Set all as done"
                                type="object"
                                class="btn-primary" />
                            <!-- 
                            Tareas a realizar:    
                            - En el ticket tenemos un campo action_ids, y no tenemos definida una vista para el modelo al que
                            apunta, crear una vista embebida, y
                            vamos a ocultar el m2o
                            - Las etiquetas tienen unas vistas qué muestran el m2m en los tickets, hacer otra vista sin este
                            m2m a los tickets, 
                            hacer otra vista sin este m2m y hacer que desde el ticket se muestre la segunda vista.
                            - Hacer que el tag_ids no pueda crear nuevos tag_ids -->

                            <field name="action_ids"
                                context="{'default_state': 'done', 
                            'list_view_ref':'helpdesk_senua.view_helpdesk_ticket_action_list_simple', 
                            'form_view_ref':'helpdesk_senua.view_helpdesk_ticket_action_form_simple'}" />
                            <!-- <label for="actions_todo" string="To Do" />
                            <field name="action_ids">
                                <list string="Actions">
                                    <field name="name" />
                                    <field name="state" />
                                </list>
                                <form>
                                     Testing button to update the state
                                    <button name="set_done"
                                        type="object"
                                        string="Set done"
                                        class="btn-primary" />

                                    <button name="set_todo"
                                        type="object"
                                        string="Set todo"
                                        class="btn-primary" />
                                    <group>
                                        <field name="name" />
                                        <field name="state" readonly="1" />
                                    </group>
                                </form>
                            </field> -->
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_helpdesk_ticket_list" model="ir.ui.view">
        <field name="name">view_helpdesk_ticket_list</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <!-- Odoo 18: widget="handle" works only on editable lists with sequence field and write
            access -->
            <list string="Tickets" editable="bottom" default_order="sequence">
                <!-- Añadir campo sequence y hacer el widget handle.-->
                <field name="sequence" widget="handle" />
                <!-- Mostrar campo nombre-->
                <field name="name" />
                <!-- Mostrar user asignado-->
                <field name="user_id" />
                <!-- El campo fecha que sea opcional y mostrarlo por defecto..-->
                <field name="date" optional="show" />
                <!-- El campo fecha limite que sea opcional mostrarlo y ocultarlo por defecto.-->
                <field name="date_limit" optional="hide" />
                <!-- Mostrar estado-->
                <field name="state" />
                <!-- Button used to open the form view since editable list rows cannot be clicked to
                open
                name: method to call on the model
                type: executes a server-side Python method
                icon: displays an external-link icon in the column
                class: makes the button behave like a link (avoids edit-in-row conflicts)
                string: label shown in the list view -->
                <button name="action_open_form"
                    type="object"
                    icon="fa-external-link"
                    class="oe_link"
                    string="Open" />

            </list>
        </field>
    </record>

    <!-- Search View -->
    <!-- Añadir vista search:
  - filtrar por nombre y por usuario asignado
  - filtrar tickets asignados
  - filtrar tickets sin date_due
  - agrupar por date_due
  - agrupar por usuario asignado -->
    <record id="view_helpdesk_ticket_search" model="ir.ui.view">
        <field name="name">view_helpdesk_ticket_search</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <search string="Tickets">
                <field name="name" />
                <field name="user_id" />
                <filter name="filter_to_assigned" string="Assigned"
                    domain="[('assigned', '=', 'True')]" />
                <filter name="filter_no_date" string="No date" domain="[('date', '=', False)]" />
                <filter name="date" string="Date" context="{'group_by': 'date'}" />
                <filter name="user" string="User" context="{'group_by': 'user_id'}" />
            </search>
        </field>
    </record>


    <!-- Añadir vista pivot a la acción.
    mostrar tiempo dedicado por usuario / mes -->
    <record id="helpdesk_ticket_pivot" model="ir.ui.view">
        <field name="name">helpdesk_ticket_pivot</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <pivot string="Tickets" disable_linking="true">
                <field name="user_id" type="row" />
                <field name="date" interval="month" type="col" />
                <field name="amount_time" type="measure" widget="float_time" />
                <field name="color" invisible="1" />
            </pivot>
        </field>
    </record>

    <!-- - ## Vista graph:
  - añadir vista pivot a la acción.
  - mostrar tiempo dedicado por usuario -->

    <record id="helpdesk_ticket_graph" model="ir.ui.view">
        <field name="name">helpdesk_ticket_graph</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <!-- Types: bar, line, pie -->
            <graph string="Tickets" type="bar">
                <field name="user_id" />
                <field name="amount_time" type="measure" />
            </graph>
        </field>
    </record>

    <!-- - ## Vista calendar:
  - por fecha mostrando cada usuario asignado. -->
    <record id="model_name_ticket_calendar" model="ir.ui.view">
        <field name="name">helpdesk_ticket.calendar</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <calendar string="Tcikets" create="0" mode="month" date_start="date" color="user_id"
                event_limit="5">
                <field name="name" />
                <field name="user_id" avatar_field="avatar_128" />
            </calendar>
        </field>
    </record>


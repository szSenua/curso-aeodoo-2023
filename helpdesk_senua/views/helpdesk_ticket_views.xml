    <!-- UPGRADED KANBAN VIEW - ODOO 18 MODERN STRUCTURE -->
    <record id="helpdesk_ticket_kanban" model="ir.ui.view">
        <field name="name">helpdesk_ticket.kanban</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <kanban highlight_color="color" default_group_by="user_id" class="o_kanban_small_column">
                <field name="name" />
                <field name="date" />
                <field name="color" />
                <field name="user_id" />
                <templates>
                    <!-- Color picker -->
                    <t t-name="menu">
                        <t t-if="widget.editable">
                            <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                        </t>
                        <t t-if="widget.deletable">
                            <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                        </t>
                        <field name="color" widget="kanban_color_picker" />
                    </t>
                    <!-- Card -->
                    <t t-name="card">
                        <div class="oe_kanban_content">
                            <!-- Title -->
                            <field name="name" class="fw-bold fs-5" />

                            <!-- Date -->
                            <div class="text-muted mt-2">
                                <i class="fa fa-calendar me-1" />
                                <field name="date" />
                            </div>

                            <!-- Footer with avatar -->
                            <footer class="pt-3 mt-auto">
                                <div class="d-flex align-items-center">
                                    <div class="flex-grow-1">
                                        <!-- Aquí puedes agregar prioridad o actividades -->
                                        <!-- <field name="priority" widget="priority"
                                        groups="base.group_user" class="me-2"/> -->
                                        <!-- <field name="activity_ids" widget="kanban_activity"/> -->
                                    </div>
                                    <field name="user_id" widget="many2one_avatar_user"
                                        class="ms-auto" />
                                </div>
                            </footer>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action: defines what happens when you click the menu -->
    <record id="helpdesk_ticket_action" model="ir.actions.act_window">
        <!-- Title displayed at the top when opening this window -->
        <field name="name">Helpdesk Tickets</field>

        <!-- Action type: opens a window with views -->
        <field name="type">ir.actions.act_window</field>

        <!-- Data model to be displayed -->
        <field name="res_model">helpdesk.ticket</field>

        <!-- Available views: list first, then form -->
        <!-- Odoo 18 uses "list" instead of "tree" -->
        <field name="view_mode">list,kanban,pivot,graph,calendar,form</field>

        <!-- Message displayed when there are no tickets created -->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new ticket
            </p>
        </field>
    </record>

    <!-- Main menu displayed in the top navigation bar -->
    <menuitem id="helpdesk_menu" name="Helpdesk" sequence="10" />

    <!-- Submenu inside Helpdesk that executes the action -->
    <menuitem id="helpdesk_ticket_open"
        name="Tickets"
        sequence="10"
        parent="helpdesk_menu"
        action="helpdesk_ticket_action" />
</odoo>